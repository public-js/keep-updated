{
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "parser": "html",
                "singleQuote": false
            }
        },
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": "*.json",
            "options": {
                "singleQuote": false,
                "tabWidth": 2
            }
        }
    ]
}
